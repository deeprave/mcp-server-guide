{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Server Guide Configuration Schema",
  "description": "Schema for validating MCP server guide configuration",
  "type": "object",
  "properties": {
    "docroot": {
      "type": "string",
      "description": "Document root directory path"
    },
    "project": {
      "type": "string",
      "description": "Project name"
    },
    "categories": {
      "type": "object",
      "description": "Category definitions",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_-]*$": {
          "type": "object",
          "properties": {
            "dir": {
              "type": "string",
              "description": "Directory path for category files"
            },
            "patterns": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1,
              "description": "File patterns to match"
            },
            "description": {
              "type": "string",
              "description": "Category description"
            },
            "auto_load": {
              "type": "boolean",
              "description": "Whether to auto-load category content"
            }
          },
          "required": ["dir", "patterns", "description"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
